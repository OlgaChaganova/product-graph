[flake8]
exclude =
    .git,
    __pycache__,
    docs,
    img,
    notebooks,
    reports,
    .venv,
    venv,
    .ipynb,
    .md,
    .txt,
    .tox,
    *.egg,
    *.egg-info,
max-complexity = 10
max_line_length = 120

# Ignore unused imports in __init__.py files
per-file-ignores = __init__.py:F401